<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="20dp">

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/foodImage"
            android:layout_width="70dp"
            android:layout_height="70dp"
            android:src="@drawable/avatar_image"
            android:layout_centerVertical="true"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/gray_light"/>

        <TextView
            android:id="@+id/foodName"
            android:layout_width="300dp"
            android:layout_height="87dp"
            android:layout_marginRight="20dp"
            android:paddingLeft="30dp"
            android:paddingTop="20dp"
            android:textColor="@color/black"
            android:layout_toEndOf="@id/foodImage"
            android:text="A bit of everything.."
            android:textSize="22sp"
            android:textStyle="bold"
            android:background="@drawable/border_menu"/>

        <de.hdodenhof.circleimageview.CircleImageView
            android:id="@+id/move_on"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_toEndOf="@id/foodName"
            android:layout_marginLeft="-50dp"
            android:layout_centerVertical="true"
            app:civ_border_width="2dp"
            app:civ_border_color="@color/gray_lighting"
            app:civ_circle_background_color="@color/gray_lighting"
            android:src="@drawable/baseline_keyboard_arrow_right_24"/>
    </RelativeLayout>

</RelativeLayout>